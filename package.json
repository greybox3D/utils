{
	"name": "@greybox/utils",
	"private": true,
	"version": "0.0.0",
	"description": "A collection of utility functions by Greybox.",
	"repository": {
		"url": "git@github.com:greybox3D/utils.git"
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"test": "bunx vitest --run",
		"test:watch": "bunx vitest",
		"lint": "turbo lint",
		"lint:fix": "turbo lint:fix",
		"publish-package": "dotenv -e .env -- bun turbo publish-package --parallel --continue",
		"verify-npm-config-token": "dotenv -e .env -- bun ./scripts/verify-npm-config-token.ts",
		"upgrade-deps": "bunx taze -Irwi"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"turbo": "^2.3.1"
	},
	"packageManager": "bun@1.1.36",
	"trustedDependencies": [
		"@biomejs/biome"
	],
	"dependencies": {
		"dotenv-cli": "^7.4.4"
	}
}
