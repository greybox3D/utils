{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"test": {
			"cache": false
		},
		"test:watch": {
			"persistent": true,
			"cache": false
		},
		"lint": {
			"cache": false
		},
		"lint:fix": {
			"cache": false
		},
		"publish-package": {
			"cache": false,
			"dependsOn": ["verify-npm-config-token"],
			"env": ["NPM_CONFIG_TOKEN"]
		},
		"verify-npm-config-token": {
			"cache": false,
			"env": ["NPM_CONFIG_TOKEN"]
		}
	},
	"ui": "stream"
}
